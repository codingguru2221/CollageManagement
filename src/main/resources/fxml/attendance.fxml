<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="700.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qrcode.javafx.controllers.AttendanceController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <Label text="Mark Attendance">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    
    <Label fx:id="welcomeLabel" text="Welcome, Teacher!">
        <font>
            <Font size="16.0" />
        </font>
    </Label>
    
    <Label fx:id="dateLabel" text="Date:">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    
    <GridPane hgap="10.0" vgap="15.0">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="10.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
        
        <Label text="Select Student:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <ComboBox fx:id="studentComboBox" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label text="Course ID:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="courseIdField" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    </GridPane>
    
    <Button fx:id="scanQRButton" onAction="#handleScanQR" text="Scan QR Code with Camera">
        <font>
            <Font size="16.0" />
        </font>
        <padding>
            <Insets bottom="12.0" left="20.0" right="20.0" top="12.0" />
        </padding>
    </Button>
    
    <TextArea fx:id="statusArea" prefHeight="200.0" prefWidth="200.0" promptText="Status messages will appear here..." wrapText="true" />
    
    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="backButton" onAction="#handleBack" text="Back to Dashboard">
            <font>
                <Font size="14.0" />
            </font>
            <padding>
                <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
            </padding>
        </Button>
    </HBox>
</VBox>