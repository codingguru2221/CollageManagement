<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qrcode.javafx.controllers.TeacherDashboardController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <Label fx:id="welcomeLabel" text="Welcome, Teacher!">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>
    
    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="viewStudentsButton" onAction="#handleViewStudents" text="View Students">
            <font>
                <Font size="14.0" />
            </font>
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
            </padding>
        </Button>
        
        <Button fx:id="markAttendanceButton" onAction="#handleMarkAttendance" text="Mark Attendance">
            <font>
                <Font size="14.0" />
            </font>
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
            </padding>
        </Button>
        
        <Button fx:id="addResultButton" onAction="#handleAddResult" text="Add Result">
            <font>
                <Font size="14.0" />
            </font>
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
            </padding>
        </Button>
    </HBox>
    
    <Button fx:id="logoutButton" onAction="#handleLogout" text="Logout">
        <font>
            <Font size="14.0" />
        </font>
        <padding>
            <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
        </padding>
    </Button>
</VBox>